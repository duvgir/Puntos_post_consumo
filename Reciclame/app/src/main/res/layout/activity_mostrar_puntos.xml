<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mostrar_puntos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.duvangiraldo.reciclame.Mostrar_puntos"
    android:background="@color/colorPrimaryDark">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:layout_below="@+id/LlenarLista"
        android:layout_alignParentStart="true"
        android:id="@+id/toolbar" />

    <ListView
        android:layout_width="?android:attr/listPreferredItemHeightLarge"
        android:layout_height="match_parent"
        android:id="@+id/lv_vocero"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toolbar" />

    <ListView
        android:layout_width="?attr/listPreferredItemHeightLarge"
        android:layout_height="match_parent"
        android:id="@+id/lv_direccion"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/lv_vocero"
        android:layout_below="@+id/toolbar" />

    <ListView
        android:layout_width="?android:attr/listPreferredItemHeightLarge"
        android:layout_height="match_parent"
        android:id="@+id/lv_categoria"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/lv_vocero"
        android:layout_below="@+id/toolbar" />

    <Button
        android:text="Consultar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LlenarLista"
        android:background="@android:color/background_light"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/lv_direccion" />
</RelativeLayout>
